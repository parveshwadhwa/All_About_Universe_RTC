

<h4 class="ui center aligned huge icon header">
  <i class="circular yellow coffee icon"></i>
  <font color=" yellow">Say Something</font>
</h4>

<div class="ui two column very relaxed stackable grid grid">
<div class="twelve wide column">
<div class="ui fluid raised card chatbox">
  <div class="content" id="scroll">
  <div class="ui large feed" id="mess">
 <%= render @messages %>
  </div>
</div>
<div class="extra content">
<%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path, remote: true) do |f| %>
    <div class="field">
      <div class="ui fluid icon input">
      <%= f.text_field :body %>
      <%= f.button '<i class="bordered inverted orange edit icon"></i>'.html_safe %>
    </div>
    </div>
  <% end %>
  </div>
</div>
</div>


<div class="four wide column">
<div class="ui fluid raised card chatbox">
  <div class="content">
<div class="ui inverted vertical pointing menu">
  <a class="active item">
    Home
  </a>
  <a class="item">
    Messages
  </a>
  <a class="item">
    Friends
  </a>
</div>
</div>
</div>
</div>
</div>